<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Add_user">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuario"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        >
    </TextView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre (s)"
            android:layout_margin="10dp"
            android:id="@+id/name"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:drawableRight="@drawable/ic_mode_edit_user"
            >
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido (s)"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:inputType="text"
            android:id="@+id/apellido_user"
            android:drawableRight="@drawable/ic_apellido"
            android:textColor="@color/colorPrimaryDark"
            >
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_users"
            android:hint="E-Mail"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textEmailAddress"
            android:textSize="15dp"></android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/user_password"
            android:textSize="15dp"
            >
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Password"
            android:drawableRight="@drawable/ic_security"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/user_confirm_password"
            android:textSize="15dp"
            >
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/user_register"
        >
    </TextView>

    <!--String username, String password, String name, String apellido, Integer -->
</LinearLayout>